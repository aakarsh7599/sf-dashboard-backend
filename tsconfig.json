{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                       
    "lib": ["ES2020"],                        
    "module": "CommonJS",                     
    "moduleResolution": "node",              
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "rootDir": "./src",                       
    "outDir": "./dist",                       

    /* Type Checking */
    "strict": true,                           
    "skipLibCheck": true,                     

    /* Node support */
    "resolveJsonModule": true,                
    "types": ["node"],                        

    /* Clean Emission */
    "noEmitOnError": true                     
  },
  "include": ["src"],                         
  "exclude": ["node_modules", "dist"]         
}